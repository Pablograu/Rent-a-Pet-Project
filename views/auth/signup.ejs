<form id="form" action="/auth/signup" method="POST">
  <div class="outer-container">
    <h1 class="app-title">Petify</h1>
    <img class="logo-img" src="/images/logoapp.png" alt="logo">
    <div class="signup-container">
      <label for="username">Username</label>
      <input class="form-control" type="text" name="username" placeholder="Your username">
      <label for="password">Password</label>
      <input class="form-control" type="password" name="password" placeholder="********">
      <label for="email">Email</label>
      <input class="form-control" type="email" name="email" placeholder="user@example">
      <% if (errorMessage) { %>
        <div class="error-message">
          <%= errorMessage %>
        </div>
      <% } %>
    </div>
    <div class="btnContainer">
    <button id="signupBtn" type="submit" class="btn btn-primary">Create an account</button>
    </div>
    <div>
      <p class="account-message">or <a href="/">login</a> if you already have an account</p>
    </div>
  </div>
</form>